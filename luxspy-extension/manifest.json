{
  "name": "LuxSpy",
  "description": "Monitor Autodarts board state and control LEDs",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": ["storage", "tabs"],
  "icons": {
    "16": "images/luxspy-icon-16.png",
    "32": "images/luxspy-icon-32.png",
    "48": "images/luxspy-icon-48.png",
    "128": "images/luxspy-icon-128.png"
  },
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "images/luxspy-icon-16.png",
      "32": "images/luxspy-icon-32.png",
      "48": "images/luxspy-icon-48.png",
      "128": "images/luxspy-icon-128.png"
    }
  },
  "content_scripts": [
    {
      "js": ["src/config.js", "src/utils.js", "src/content/content.js"],
      "css": ["src/content/content.css"],
      "matches": [
        "https://play.autodarts.io/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "assets/*" ],
      "matches": [ "*://*/*" ]
    }
  ],
  "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Alt+S",
          "mac": "Alt+S"
        },
        "description": "Opens popup.html"
      }
    }
  }
